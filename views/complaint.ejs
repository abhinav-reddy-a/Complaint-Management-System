<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Complaint Management System</title>
    <script>
        function setDate(){
            var date = document.getElementById('date');
            var d = new Date();
            date.value = d.getFullYear()+'-'+(d.getMonth()+1)+'-'+d.getDate();
        }
        function changeRating(n){
	    	var num = Number(n);
	    	var stars = document.getElementsByClassName('fa');
	    	document.getElementById('stars').value = num;
	        for(var i=0;i<5;i++){
	        	if(i<num)
	        	stars[i].className = 'fa fa-star checked';
	            else
	        	stars[i].className = 'fa fa-star';
	        }
	    }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
		.checked {
		  color: orange;
		}
		.stars{
			border: none;
		    background-color: transparent;
		}
		#stars{
			display: none;
		}
        body{
            background-color: #eee !important;
        }
        .container-fluid{
            margin-top: 20px !important;
		}
		.card{
			padding: 0px !important;
			margin: 5px;
		}
		.cards{
			display: flex;
			flex-direction: column;
		}
		.card-body{
			margin: 0px !important;
			padding: 10px !important;
		}
		.details{
			background-color: rgba(255,255,255,0.6);
			padding: 10px;
			margin: 10px;
		}
	</style> 
	<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
</head>
<body onload="setDate()">
	<%if(role == 'general'){%>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
			<span class="navbar-brand">Complaint Management System</span>
			<button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
			<div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
				<ul class="navbar-nav">
					<li class="nav-item">
					<a class="nav-link" href="/">Back to Home</a>
					</li>
				</ul>
			</div>
		</nav>
	<%}%>
	<%console.log('role: ',role); %>
	<%if(role == 'student' || role == 'secy' || role == 'admin'){%>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
		<span class="navbar-brand">Hello <%=name%></span>
		<button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
		<div
		  class="collapse navbar-collapse justify-content-end"
		  id="navbarNavDropdown"
		>
		  <ul class="navbar-nav">
			<li class="nav-item">
			  <a class="nav-link" href="../home">Home</a>
			</li>
			<li class="nav-item">
			  <a class="nav-link" href="../history">History</a>
			</li>
			<%if(role != 'admin'){%>
			<li class="nav-item">
			  <a class="nav-link" href="../new_complaint">New Complaint</a>
			</li>
			<%}%>
			<li class="nav-item">
			  <a class="nav-link" href="../../auth/logout">LogOut</a>
			</li>
		  </ul>
		</div>
	  </nav>
	  <%}%>
	  <div class="container-fluid">
	<%if(typeof result[0] != 'undefined'){%>
		<%if(result[0].resolved == 0){%>
			<%if((role == 'secy' && result[0].student_id != null) || role == 'admin'){%>
				<%var resolveLink = '../resolve/?id='+result[0].complaint_id+'&date='+result[0].cdate;%>
				<a href="<%=resolveLink%>"><button class=" btn btn-primary">Resolved</button></a>
			<%}%>
			<%if((role == 'student') || (role == 'secy' && result[0].student_id == null)){%>
				<%var deleteLink = '../delete/?id='+result[0].complaint_id;%>
				<a href="<%=deleteLink%>"><button class=" btn btn-primary">Delete Complaint</button></a>
			<%}%>
		<%}%>
		<%if(role == 'secy'){%>
			<%if(result[0].admin_id == null && result[0].resolved == 0){%>
				<%var forwardLink = '../forward/?id='+result[0].complaint_id+'&did='+result[0].dept_id;%>
				<a href="<%=forwardLink%>">Forward it</a>
			<%}%>
		<%}%>
		<div class="details">
		<p>Complaint Id: #<%=result[0].complaint_id%></p>
		<p>Date: <%=String(result[0].cdate).slice(0,15)%></p>
		<p>Department Name: <%=result[0].dept_name%></p>
		<p>Complaint Subject: <%=result[0].complaint_subject%></p>
		<p>Complaint Text: <%=result[0].complaint_text%></p>
		</div>
		<%if(result[0].from_to != null){%>	
			<% for(var i=0;i<result.length;i++ ){ %>
				<% if((result[i].from_to[0]=='S' && role=='secy') || (result[i].from_to[0]=='T' && role=='student') || (result[i].from_to[0]=='A' && role=='admin')){%>
					<div class="cards" style="align-items: flex-end;" >
					<div class="card bg-light mb-3 text-right" style="width: 30%;">
				<%}else{%>
					<div class="cards" style="align-items: flex-start;" >
					<div class="card text-white bg-dark mb-3" style="width: 30%;">
				<%}%>
					<div class="card-body">
						<%if(result[i].from_to[0]=='S'){%>
							<h6 class="card-title"><strong>Secy</strong></h6>
						<%}else if(result[i].from_to[0]=='T'){%>
							<h6 class="card-title"><strong>Student</strong></h6>
						<%}else{%>
							<h6 class="card-title"><strong>Admin</strong></h6>
						<%}%>
						<p class="card-text"><%=result[i].reply_text%></p>
						<p class="card-subtitle mb-2 text-muted"><%=String(result[i].date).slice(0,15)%></p>
					</div>
				</div>
				</div>
			<%}%>
		<%}%>
		<%if(result[0].resolved == 0){%>
			
			<form method="post">
				<div class="form-group">
				<label for="date">Date</label>
				<input
					type="text"
					name="date"
					class="form-control"
					readonly
					id="date"
				/>
				</div>
				<div class="form-group">
				<label for="text">Reply to this</label>
				<textarea
					class="form-control"
					id="text"
					name="reply_text"
					rows="5"
				></textarea>
				</div>
				<button type="Submit" class=" btn btn-primary">Send</button><br/><br/>
			</form>
		<%}%>
		<%if(((result[0].resolved == 1) &&((role == 'student') || (role == 'secy' && result[0].student_id == null)))){%>
			<%if(result[0].stars == null){%>
				<button class='stars' onclick='changeRating("1")'><span class="fa fa-star"></span></button>
				<button class='stars' onclick='changeRating("2")'><span class="fa fa-star"></span></button>
				<button class='stars' onclick='changeRating("3")'><span class="fa fa-star"></span></button>
				<button class='stars' onclick='changeRating("4")'><span class="fa fa-star"></span></button>
				<button class='stars' onclick='changeRating("5")'><span class="fa fa-star"></span></button>

				<form method='post'>
					<input type="number" name="stars" id='stars' value='0'/>
					<p>Comments:<br/><textarea rows="10" cols="50" name="comments"></textarea></p>
					<button type="submit btn btn-primary">Submit</button>
				</form>
			<%}else{%>
				<p>Your Review</p>
				<%for(var i=0;i<5;i++){%>
					<%if(i<Number(result[0].stars)){%>
						<span class="fa fa-star checked"></span>
					<%}else{%>
						<span class="fa fa-star"></span>
					<%}%>
				<%}%>
				<%if(result[0].comments!=''){%>
					<p>Comments: <%=result[0].comments%></p>
				<%}%>
			<%}%>
		<%}%>
	<%}else{%>
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
            Data not Found
            <button type="button" class="close btn btn-primary" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
	<%}%>
	</div>
</body>
</html>